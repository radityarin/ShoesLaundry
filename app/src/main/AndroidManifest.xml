<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shoes.shoeslaundry">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".ui.user.ProfileActivity"></activity>
        <activity android:name=".ui.user.PromotionActivity" />
        <activity android:name=".ui.user.LocationActivity" />
        <activity android:name=".ui.user.TrackActivity" />
        <activity android:name=".ui.user.ChatActivity" />
        <activity android:name=".ui.user.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.admin.MainAdminActivity" />
        <activity
            android:name=".ui.generalactivity.ForgotPasswordActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".ui.generalactivity.LoginPage"
            android:configChanges="orientation" />
        <activity
            android:name=".ui.generalactivity.LandingPage"
            android:configChanges="orientation" />
        <activity
            android:name=".ui.generalactivity.SplashScreen"
            android:configChanges="orientation" />
        <activity
            android:name=".ui.user.SignUpPage"
            android:configChanges="orientation" />
    </application>

</manifest>